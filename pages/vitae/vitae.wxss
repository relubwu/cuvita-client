@import '/assets/stylesheets/weui.wxss';

/**
 * Card
 */

.card {
  position: absolute;
  top: 0;
  height: 70vw;
  box-sizing: border-box;
}

.card-background {
  position: absolute;
  top: 0;
  z-index: -5;
}

.card-container {
  position: absolute;
  top: 0;
  z-index: 0;
  padding-bottom: 18vw;
}

.card-body {
  position: absolute;
  height: 50vw;
  width: 80vw;
  background: white;
  border-radius: 10px;
  overflow: hidden;
  box-shadow: 0 0 20px #2b2b2b2b;
}

.card-body-hover {
  -webkit-transform: scale(1.05);
  transform: scale(1.05);
}

.card-countdown {
  color: #fff;
  right: 10px;
  position:absolute;
  z-index:1; 
}

.shine {
  mask-image: linear-gradient(-75deg, rgba(0,0,0,.6) 30%, #000 50%, rgba(0,0,0,.6) 99%);
  -webkit-mask-image: linear-gradient(-75deg, rgba(0,0,0,.6) 30%, #000 50%, rgba(0,0,0,.6) 99%);
  mask-size: 200%;
  -webkit-mask-size: 200%;
  animation: shine 4s infinite, hover 2s alternate infinite ease-in-out;
}
@-webkit-keyframes shine {
  from {
    -webkit-mask-position: 150%;
  }
  
  to {
    -webkit-mask-position: -50%;
  }
}
@keyframes shine {
  from {
    -webkit-mask-position: 150%;
  }
  
  to {
    -webkit-mask-position: -50%;
  }
}
/**
 * Body Generic
 */

.body {
  position: absolute;
  top: 70vw;
}

/**
 * Mmembership
 */

.membership {
  position: relative;
  height: 20vw;
  padding-top: 35px;
  padding-bottom: 14px;
}

.membership-info-icon {
  width: 16pt;
  height: 16pt;
  padding: 0 2px;
}

.membership-info-credit-current {
  font-size: 20pt;
  font-weight: bold;
  padding: 0 2px;
}

.membership-progressbar-container {
  height: 20px;
  padding: 7px 30px;
  padding-top: 0;
}

.membership-progressbar-base {
  overflow: hidden;
  border-radius: 20px;
  background: #b2b2b2b2;
}

.membership-progressbar {
  border-radius: 20px;
  background-position: center;
  background: linear-gradient(to right, #d1233e, #ffd116);
  transition: width 0.5s ease;
  -webkit-transition: width 0.5s ease;
}

.membership-rubric {
  padding: 0 30px;
  box-sizing: border-box;
  justify-content: space-between;
  align-items: center;
}

.membership-rubric-label {
  font-size: 11pt;
  color: #b2b2b2;
}

/**
 * Navigators
 */

.navigators {
  padding: 14px 0;
  padding-bottom: 28px;
}

.navigators-title {
  font-size: 11pt;
  text-transform: capitalize;
}

.navigators-tag {
  margin: 0 7px;
  text-transform: capitalize;
}

.button-wrapper {
  box-sizing: border-box;
  padding: 42px 30px;
}

.button {
  width: calc(50% - 15px) !important;
  margin: 0 7px !important;
  overflow: hidden !important;
  border-radius: 5px !important;
}

.button-link {
  color: black !important;
  background-color: white !important;
}

.button-register {
  color: white !important;
  background-color: #d1233e !important;
}

swiper {
  height: 80vw;
}

.swiper-agenda {
  font-size: 28pt;
}

image {
  padding-bottom: 28px;
}